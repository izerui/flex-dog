<?xml version="1.0" encoding="utf-8"?>
<s:MXDataGridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
                          xmlns:s="library://ns.adobe.com/flex/spark"
                          xmlns:mx="library://ns.adobe.com/flex/mx"
                          focusEnabled="true">
    <fx:Script>
		<![CDATA[
        override public function set data(value:Object):void {
            var ext:String = "unknown";
            ext = value.fileName.substring(value.fileName.lastIndexOf(".") + 1, value.fileName.length);
            myImg.source = "/assets/fileicon/" + ext + ".gif";
            super.data = value;
        }
        ]]>
	</fx:Script>
    <s:HGroup paddingLeft="5">
        <mx:Image id="myImg" ioError="myImg.source = '/assets/fileicon/unknown.gif'"/>
        <mx:Label id="lsp" text="{data.fileName}"/>
    </s:HGroup>
</s:MXDataGridItemRenderer>
